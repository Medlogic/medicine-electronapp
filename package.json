{
  "name": "medicine",
  "productName": "Medicine",
  "description": "Hospital information system application",
  "version": "0.3.1",
  "private": true,
  "license": "MIT",
  "author": "MedLogic",
  "copyright": "© 2019, MedLogic inc.",
  "homepage": "http://med-logic.ru",
  "main": "app/background.js",
  "build": {
	"appId": "com.electron.medicine",
	"asar": false,
    "productName": "Medicine",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
			"ia32"
          ]
        }
      ],
      "icon": "./icon.ico"
    },
	"publish": [{
		"provider": "github"
	}],
    "nsis": {
      "oneClick": "true",
      "perMachine": "true",
      "shortcutName": "Медицина"
    }
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "preunit": "webpack --config=build/webpack.unit.config.js --env=test --display=none",
    "unit": "electron-mocha temp/specs.js --renderer --require source-map-support/register",
    "pree2e": "webpack --config=build/webpack.app.config.js --env=test --display=none && webpack --config=build/webpack.e2e.config.js --env=test --display=none",
    "e2e": "mocha temp/e2e.js --require source-map-support/register",
    "test": "npm run unit && npm run e2e",
    "start": "node build/start.js",
    "release": "npm test && webpack --config=build/webpack.app.config.js --env=production && electron-builder"
  },
  "dependencies": {
    "electron-dl": "^1.10.0",
    "electron-store": "^1.3.0",
    "electron-updater": "^2.18.2",
    "fs-jetpack": "^1.0.0",
    "ping": "^0.2.2",
    "serialport": "^6.2.2",
    "windows-build-tools": "^5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.5",
    "@babel/preset-env": "^7.0.0-beta.5",
    "babel-loader": "^8.0.0-beta.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "chai": "^4.1.0",
    "css-loader": "^0.28.7",
    "electron": "^3.0.9",
    "electron-builder": "^19.55.2",
    "electron-mocha": "^4.0.0",
    "electron-rebuild": "^1.8.5",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "mocha": "^4.0.1",
    "source-map-support": "^0.5.0",
    "spectron": "^3.7.2",
    "style-loader": "^0.19.0",
    "webpack": "^3.8.1",
    "webpack-merge": "^4.1.0",
    "webpack-node-externals": "^1.6.0"
  }
}
